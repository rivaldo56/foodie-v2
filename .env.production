# Production Environment Variables for ChefConnect

# Django Configuration
SECRET_KEY=your-super-secret-production-key-here
DEBUG=False
ALLOWED_HOSTS=chefconnect.com,www.chefconnect.com,api.chefconnect.com
CORS_ALLOWED_ORIGINS=https://chefconnect.com,https://www.chefconnect.com

# Database Configuration
DATABASE_URL=postgresql://chefconnect_user:secure_password@db:5432/chefconnect_db

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Cloudinary Configuration (File Storage)
CLOUDINARY_CLOUD_NAME=your_production_cloud_name
CLOUDINARY_API_KEY=your_production_api_key
CLOUDINARY_API_SECRET=your_production_api_secret

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret

# M-Pesa Configuration (Production)
MPESA_ENVIRONMENT=production
MPESA_CONSUMER_KEY=your_production_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_production_mpesa_consumer_secret
MPESA_BUSINESS_SHORT_CODE=your_production_shortcode
MPESA_PASSKEY=your_production_passkey
MPESA_CALLBACK_URL=https://api.chefconnect.com/api/payments/mpesa/callback/

# AI Configuration
GEMINI_API_KEY=your_production_gemini_api_key

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=rivaldonassif@gmail.com
EMAIL_HOST_PASSWORD=12341234
DEFAULT_FROM_EMAIL=ChefConnect <rivaldonassif@gmail.com>

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Logging
LOG_LEVEL=INFO

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
